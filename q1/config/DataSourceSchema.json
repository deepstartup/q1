{
	"$id": "https://example.com/datasource.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "DataSource",
	"type": "array",
	"properties": {
		"SourceName": {
			"type": "string",
			"description": "Data Source name."
		},
		"ConnectionType": {
			"type": "string",
			"description": "Data Source Connection Type"
		},
		"ConnectionString": {
			"type": "string",
			"description": "Data Source Connection String Value"
		},
		"ConnectionTrigger": {
			"type": "string",
			"description": "Data Source Triggering Event"
		},
		"SourceSecret": {
			"type": "string",
			"description": "Data Source Secrets"
		}
	}
}